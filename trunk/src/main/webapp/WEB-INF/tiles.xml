<?xml version="1.0" encoding="ISO-8859-1" ?>
<!DOCTYPE tiles-definitions PUBLIC
    "-//Apache Software Foundation//DTD Tiles Configuration 2.1//EN"
    "http://tiles.apache.org/dtds/tiles-config_2_1.dtd">

<tiles-definitions>

    <definition name="layout.basic" template="/WEB-INF/layout/template.basic.jsp" />

    <definition name="layout.bare" template="/WEB-INF/layout/template.basic.jsp">
        <put-attribute name="header">
            <definition template="/WEB-INF/layout/header.jsp">
                <put-attribute name="lpanel" value="" />
            </definition>
        </put-attribute>
        <put-attribute name="menu" value="" />
    </definition>

    <!-- ======= -->
    <!-- General -->
    <!-- ======= -->

    <definition name="index" extends="layout.bare">
        <put-attribute name="title" value="CSNetwork Services" />
        <put-attribute name="content" value="/WEB-INF/content/index.jsp" />
    </definition>

    <definition name="login" extends="layout.bare">
        <put-attribute name="title" value="Login" />
        <put-attribute name="content" value="/WEB-INF/content/login.jsp" />
    </definition>

    <definition name="400" extends="layout.bare">
        <put-attribute name="title" value="Bad Request" />
        <put-attribute name="content" value="/WEB-INF/content/400.jsp" />
    </definition>

    <definition name="401" extends="layout.bare">
        <put-attribute name="title" value="Login Error" />
        <put-attribute name="content" value="/WEB-INF/content/401.jsp" />
    </definition>

    <definition name="403" extends="layout.bare">
        <put-attribute name="title" value="Access Denied" />
        <put-attribute name="content" value="/WEB-INF/content/403.jsp" />
    </definition>

    <definition name="404" extends="layout.bare">
        <put-attribute name="title" value="Page Not Found" />
        <put-attribute name="content" value="/WEB-INF/content/404.jsp" />
    </definition>

    <!-- ===== -->
    <!-- Admin -->
    <!-- ===== -->
    
    <definition name="admin/department/list" extends="layout.basic">
        <put-attribute name="title" value="Departments" />
        <put-attribute name="content" value="/WEB-INF/content/admin/department/list.jsp" />
    </definition>

    <definition name="admin/department/add" extends="layout.basic">
        <put-attribute name="title" value="Add Department" />
        <put-attribute name="content" value="/WEB-INF/content/admin/department/add.jsp" />
        <put-list-attribute name="cssUrls">
            <add-attribute value="${jqueryui.css}" />
        </put-list-attribute>
        <put-list-attribute name="jsUrls">
            <add-attribute value="${jqueryui.url}" />
        </put-list-attribute>
    </definition>

    <definition name="admin/department/edit" extends="layout.basic">
        <put-attribute name="title" value="Edit Department" />
        <put-attribute name="content" value="/WEB-INF/content/admin/department/edit.jsp" />
    </definition>

    <!-- ==== -->
    <!-- User -->
    <!-- ==== -->

    <definition name="user/search" extends="layout.basic">
        <put-attribute name="title" value="Users" />
        <put-attribute name="content" value="/WEB-INF/content/user/search.jsp" />
        <put-list-attribute name="cssUrls">
            <add-attribute value="${jqueryui.css}" />
        </put-list-attribute>
        <put-list-attribute name="jsUrls">
            <add-attribute value="${jqueryui.url}" />
        </put-list-attribute>
    </definition>

    <!-- ========== -->
    <!-- Department -->
    <!-- ========== -->

    <definition name="department/index" extends="layout.basic">
        <put-attribute name="title" value="Department Home" />
        <put-attribute name="content" value="/WEB-INF/content/department/index.jsp" />
    </definition>

</tiles-definitions>
