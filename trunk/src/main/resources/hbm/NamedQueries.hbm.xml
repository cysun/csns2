<hibernate-mapping>

    <sql-query name="course.search">
        <return class="csns.model.academics.Course" />
<![CDATA[
select * from courses where obsolete = 'f' and
    (code like upper(:term) || '%' or plainto_tsquery(:term) @@ tsv)
    order by code asc
]]>
    </sql-query>

</hibernate-mapping>
